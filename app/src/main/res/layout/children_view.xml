<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg1">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg1"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#064200"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Child Details"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit"
            app:tint="@color/white"/>

    </LinearLayout>

    <!-- Scrollable Details View -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Details Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blur_bg"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Name Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/childNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="Rachel Wong"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <!-- Birthday Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/childBirthdayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="Aug 16, 2004"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <!-- Note Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="Note"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/childNoteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="@string/xxxxxx"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Allergies Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="Allergies"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/allergiesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="@string/xxxxxx"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <!-- Sick History Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="Sick History"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/sickHistoryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="@string/xxxxxx"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <!-- Medical Notes Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="Medical Notes"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/medicalNotesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textStyle="bold"
                    android:text="@string/xxxxxx"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>