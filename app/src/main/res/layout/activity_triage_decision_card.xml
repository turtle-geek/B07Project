<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TriageDecisionCard">

    <!--Non-Emergency View -->
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:visibility="visible">

        <TextView
        android:id="@+id/liabilityWarning2"
            android:layout_width="270dp"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:text="Warning: This is guidance, not a diagnosis. If in doubt, call emergency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <ImageView
            android:id="@+id/yellow_card"
            android:layout_width="286dp"
            android:layout_height="374dp"
            android:layout_marginStart="68dp"
            android:layout_marginBottom="292dp"
            android:contentDescription="Emergency Decision Card"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/yellow" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="223dp"
            android:layout_height="73dp"
            android:layout_marginTop="142dp"
            android:layout_marginBottom="45dp"
            android:text="NOT AN EMERGENCY"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/yellow_card"
            app:layout_constraintVertical_bias="0.461"
            tools:layout_editor_absoluteX="94dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="247dp"
            android:layout_height="25dp"
            android:text="Start Home Recovery?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="433dp" />

        <Button
            android:id="@+id/yes_button"
            android:layout_width="97dp"
            android:layout_height="60dp"
            android:text="YES"
            android:textColor="#000000"
            android:textSize="15sp"
            android:backgroundTint="#008000"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="486dp" />

        <Button
            android:id="@+id/sos_button"
            android:layout_width="97dp"
            android:layout_height="60dp"
            android:text="CALL 91"
            android:textColor="#000000"
            android:textSize="15sp"
            android:backgroundTint="#FF0000"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="486dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Emergency View -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone">

        <TextView
            android:id="@+id/liabilityWarning"
            android:layout_width="270dp"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:text="Warning: This is guidance, not a diagnosis. If in doubt, call emergency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/red_card"
            android:layout_width="286dp"
            android:layout_height="374dp"
            android:layout_marginStart="68dp"
            android:layout_marginBottom="292dp"
            android:contentDescription="Emergency Decision Card"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/solid_red_svg" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="177dp"
            android:layout_height="45dp"
            android:layout_marginTop="142dp"
            android:layout_marginBottom="45dp"
            android:text="EMERGENCY"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/red_card"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="117dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="247dp"
            android:layout_height="25dp"
            android:layout_marginBottom="4dp"
            android:text="CALLING 911 IN X SECONDS"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            tools:layout_editor_absoluteX="82dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="187dp"
            android:layout_height="52dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            tools:layout_editor_absoluteX="112dp" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="121dp"
            android:layout_height="23dp"
            android:layout_marginTop="33dp"
            android:padding="0dp"
            android:text="DO NOT CALL 911"
            android:textColor="#000000"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            tools:layout_editor_absoluteX="145dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ViewSwitcher>