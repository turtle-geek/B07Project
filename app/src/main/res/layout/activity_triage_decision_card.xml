<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".ui.ChildUI.TriageAndResponse.TriageDecisionCard"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/warningSymbol"
        android:layout_width="42dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/warning"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="23dp" />

    <TextView
        android:id="@+id/liabilityWarning2"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:text="Warning: This is guidance, not a diagnosis. If in doubt, call emergency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="286dp"
        android:layout_height="374dp"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="178dp">


        <!-- Red Card -->

        <!-- Yellow Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/red_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:visibility="visible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp"
            tools:visibility="gone">

            <TextView
                android:id="@+id/textView"
                android:layout_width="177dp"
                android:layout_height="45dp"
                android:layout_marginTop="108dp"
                android:text="EMERGENCY"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="247dp"
                android:layout_height="25dp"
                android:layout_marginTop="22dp"
                android:text="CALLING 911 IN X SECONDS"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="187dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="121dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:padding="0dp"
                android:text="DO NOT CALL 911"
                android:textColor="#000000"
                android:textSize="8sp"
                app:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/NonSOS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/yellow_card"
                android:layout_width="286dp"
                android:layout_height="374dp"
                android:contentDescription="Emergency Decision Card"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/yellow" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="223dp"
                android:layout_height="73dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="142dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="45dp"
                android:text="NOT AN EMERGENCY"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/yellow_card"
                app:layout_constraintStart_toStartOf="@+id/yellow_card"
                app:layout_constraintTop_toTopOf="@+id/yellow_card"
                app:layout_constraintVertical_bias="0.461" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="247dp"
                android:layout_height="25dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="130dp"
                android:text="Start Home Recovery?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/yellow_card"
                app:layout_constraintEnd_toEndOf="@+id/yellow_card"
                app:layout_constraintStart_toStartOf="@+id/yellow_card" />

            <Button
                android:id="@+id/yes_button"
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="53dp"
                android:backgroundTint="#008000"
                android:text="YES"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/yellow_card"
                app:layout_constraintEnd_toEndOf="@+id/yellow_card" />

            <Button
                android:id="@+id/sos_button"
                android:layout_width="97dp"
                android:layout_height="60dp"
                android:layout_marginStart="38dp"
                android:layout_marginBottom="53dp"
                android:backgroundTint="#FF0000"
                android:text="CALL 911"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/yellow_card"
                app:layout_constraintStart_toStartOf="@+id/yellow_card" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>