<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg1"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/backgroundImageMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/testbg1"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"/>

    <!-- ScrollView to hold all three containers -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/children_management"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="times"
                android:padding="16dp"
                android:gravity="center"
                android:background="#80000000"
                android:layout_marginBottom="16dp"/>

            <!-- CONTAINER -->
            <LinearLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/blur_bg"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/editChildrenName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_children_name_1"
                    android:padding="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="times"
                    android:textStyle="bold"
                    android:textSize="26sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/field1EditText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Field 1"
                    android:layout_marginBottom="12dp"/>


                <Button
                    android:id="@+id/button1"
                    android:layout_width="280dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="19dp"
                    android:text="Save 1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="times"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addContainerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="@string/add_new_child"
                app:tint="@color/white"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>
